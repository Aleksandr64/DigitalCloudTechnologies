<Page x:Class="Crypto.App.Views.Pages.CurrencyDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Crypto.App.Views"
      mc:Ignorable="d"
      Title="CurrencyDetailsPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding Currency.Name}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding Currency.CurrentPrice, StringFormat={}{0:C}}" />
            <TextBlock Text="{Binding Currency.TotalVolume, StringFormat={}{0:N}}" />
            <TextBlock Text="{Binding Currency.PriceChangePercentage24h, StringFormat={}{0:F2}%}" />
            <TextBlock Text="{Binding Currency.Ath, StringFormat={}{0:C}}" />
            <TextBlock Text="{Binding Currency.AthDate}" />
        </StackPanel>
        
        <Button Width="50" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonBase_OnClick" Margin="0,10,20, 0"></Button>
    </Grid>
</Page>